@model AssignmentViewModel
@{
    ViewData["Title"] = "Görev Güncelle";
}

<h5 class="text-secondary text-center mt-4">
    <mark class="text-uppercase">@Model.Name</mark>
    Görevini Düzenle
</h5>
<hr class="mx-5" />
<form asp-action="Edit" method="post" class="w-75 mx-auto p-3">
    @Html.HiddenFor(i => i.Id)
    @await Html.PartialAsync("_CreateOrUpdate", Model)
    <button type="submit" class="btn btn-success btn-block">
        <i class="fas fa-save mr-2"></i>
        Değişiklikleri Kaydet
    </button>
</form>

@section Javascript{
    <script src="~/lib/js/jquery-validate/jquery.validate.min.js"></script>
    <script src="~/lib/js/jquery-validate/jquery.validate.unobtrusive.min.js"></script>
}

